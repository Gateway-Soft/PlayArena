rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 🔐 USERS: Only the authenticated user can access their own document
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // 🔐 OWNERS: Only the authenticated owner can access their own document
    match /owners/{ownerId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == ownerId;
    }

    // 📂 TURFS: Publicly readable, only signed-in users/owners can write
    match /turfs/{turfId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // 🗓️ BOOKINGS: Only authenticated users/owners can access
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null;
    }

    // ⭐ REVIEWS: Publicly readable, write allowed for authenticated users only
    match /reviews/{reviewId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
  }
}
